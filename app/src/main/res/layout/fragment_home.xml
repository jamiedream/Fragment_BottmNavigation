<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.home.HomeFragment">

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:chipIcon="@drawable/ic_launcher_background"
        android:text="filter"
        style="@style/Widget.MaterialComponents.Chip.Filter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:chipIcon="@drawable/ic_launcher_background"
        android:text="choice"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/chip_filter" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:chipIcon="@drawable/ic_launcher_background"
        android:text="action"
        style="@style/Widget.MaterialComponents.Chip.Action"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/chip_choice" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:chipIcon="@drawable/ic_launcher_background"
        android:text="entry"
        style="@style/Widget.MaterialComponents.Chip.Entry"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/chip_action" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/chip_filter"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:singleLine="true" >
            <com.google.android.material.chip.Chip
                android:id="@+id/choice_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="choice 1"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/choice_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="choice 2"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/choice_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="choice 3"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/choice_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="choice 4"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/choice_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="choice 5"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/choice_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="choice 6"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>